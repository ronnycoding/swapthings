{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "expo-yarn-workspaces": "1.2.1",
    "husky": "^7.0.0",
    "lint": "^0.7.0",
    "lint-staged": "^11.0.0",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "prettier": "^2.2.1",
    "typescript": "^4.3.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "native": "npm run start --workspace=mobile-app",
    "native:android": "npm run android --workspace=mobile-app",
    "native:ios": "npm run ios --workspace=mobile-app",
    "web:dev": "npm run dev --workspace=web-app",
    "web:storybook": "npm run storybook --workspace=web-app",
    "validate": "npm run check-types --workspaces && npm run check-format --workspaces && npm run lint --workspaces",
    "prepare": "husky install"
  },
  "engines": {
    "npm": "~7.19.1",
    "node": "~14.17.2"
  }
}
